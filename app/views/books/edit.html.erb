<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <div class="erros-container">
  <h3 class="errors-title"><%= @book.errors.count %>error prohibited this book from being saved:</h3>
  <ul class=errors-list>
    <% @book.errors.full_messages.each do |message| %>
      <li class="errors-text">
        <%= message %>
      </li>
    <% end %>
  </ul>
  </div>
    <%= form_with model:@book,url:"/books/#{@book.id}",local:true do |f| %>
      <div class="field">
        <%= f.label :Title %> <br>
        <%= f.text_field:title %>
      </div>
      <div class="field">
        <%= f.label :Body %> <br>
        <%= f.text_area:body %>
      </div>
      <%= f.submit'Update Book',class:"btn-edit" %>
    <% end %>
  <td><%= link_to 'Show',book_path %></td>
  <span>|</span>
  <td><%= link_to 'Back',books_path %></td>
  
<% else %>

  <%= form_with model:@book,url:"/books/#{@book.id}",local:true do |f| %>
    <div class="field">
      <%= f.label :Title,{class: 'new-title'} %>
      <%= f.text_field:title %>
    </div>
    <div class="field">
      <%= f.label :Body,{class: 'new-title'} %>
      <%= f.text_area:body %>
    </div>
    <%= f.submit'Update Book',class:"btn-edit" %>
  <% end %>

  <td><%= link_to 'Show',book_path %></td>
  <span>|</span>
  <td><%= link_to 'Back',books_path %></td>
  
<% end %>





    


  
    