<% if flash[:notice] %>
  <p class="book-send"><%= flash[:notice] %></p>
<% end %>

<h1 class=main-title>Books</h1>
<table>
  <tr>
    <th>taitle</th>
    <th>body</th>
  </tr>

    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show',book_path(book)%></td>
      <td><%= link_to 'Edit',edit_book_path(book[:id])%></td>
      <td><%= link_to "Destroy", destroy_book_path(book[:id]), method: :delete,"data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
    <% end %>

</table>
<h2>New Book</h2>

<% if @book.errors.any? %>

  <div class="erros-container">
    <h3 class="errors-title"><%= @book.errors.count %>error prohibited this book from being saved:</h3>
    <ul class=errors-list>
      <% @book.errors.full_messages.each do |message| %>
      <li class="errors-text">
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>

   <%= form_with model:@book, local:true,class: :new do |f| %>
    <div class="field">
      <%= f.label :Title %><br>
      <%= f.text_field:title %>
    </div>
    <div class="field">
      <%= f.label :Body %> <br>
      <%= f.text_area:body %>
    </div>
    <%= f.submit'Create Book', class:'btn-new' %>

<% end %>

<% else %>

  <%= form_with model:@book, local:true,class: :new do |f| %>
    <div class="field">
      <%= f.label :Title,{class: 'new-title'} %>
      <%= f.text_field:title %>
    </div>
    <div class="field">
    <%= f.label :Body,{class: 'new-title'} %>
    <%= f.text_area:body %>
    <%= f.submit'Create Book', class:'btn-new' %>
    </div>
  <% end %>

<% end %>

